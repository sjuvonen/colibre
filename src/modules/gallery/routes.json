        "single": "file"
      }
    },
    "requirements": {
      "method": "post",
      "permission": "picture.edit"
    }
  },
  {
    "name": "edit",
    "path": "/admin/gallery/:picture",
    "action": "picture.edit",
    "requirements": {
      "method": "get",
      "permission": "picture.edit"
    }
  },
  {
    "name": "edit.post",
    "path": "/admin/gallery/:picture",
    "action": "picture.save",
    "requirements": {
      "method": "post",
      "permission": "picture.edit"
    }
  }
