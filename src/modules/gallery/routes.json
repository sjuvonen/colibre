    "requirements": {
      "permission": "picture.edit"
    }
  },
  {
    "name": "new",
    "path": "/admin/gallery/new",
    "action": "picture.edit",
    "defaults": {
      "picture": null
    },
    "requirements": {
      "method": "get",
      "permission": "picture.edit"
    }
  },
  {
    "name": "new.post",
    "path": "/admin/gallery/new",
    "action": "picture.save",
